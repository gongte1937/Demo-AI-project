NODE_ENV=development
PORT=3000

# CORS - comma-separated list of allowed origins
# Dev example:   CORS_ORIGINS=http://localhost:5173,http://localhost:3001
# Prod example:  CORS_ORIGINS=https://your-frontend-domain.com
CORS_ORIGINS=http://localhost:5173,http://localhost:3001

# Supabase
SUPABASE_URL=https://<project-ref>.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Prisma - Supabase connection pooler (port 6543 for queries)
DATABASE_URL=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?pgbouncer=true

# Prisma - Direct connection (port 5432 for migrations)
DIRECT_URL=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres

# JWT
JWT_SECRET=your-jwt-secret-at-least-32-chars
JWT_EXPIRES_IN=7d

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key
